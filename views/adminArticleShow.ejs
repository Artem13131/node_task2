<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="../public/css/1.css">
    <style>
        body {
        font-family: 'Arial', sans-serif;
        background-color: #62ed52;
        margin: 0;
        padding: 0;
    }


    /* Стили для статей */
    #articleTitle {
        border: 2px solid #e74c3c; 
        padding: 10px;
        margin-bottom: 10px;
        font-weight: bold;
        text-align: center;
    }
    #articlesTitle {
        padding: 10px;
        margin-bottom: 10px;
        font-weight: bold;
        text-align: center;
    }
    #articlesDescription {
        padding: 10px;
        margin-bottom: 10px;
        margin-right: 200px;
        margin-left: 200px;
        text-align: justify;
    }
    #articleContent {
        padding: 10px;
        margin-top: 10px;
    }
    #articleText {
        border: 2px solid #3498db;
        padding: 10px;
        margin-top: 10px;
    }

    /* Стили новостей */
    /* public/css/style.css */
    
    /* Стили для списка новостей (newsList.ejs) */
    
    #newsTitle {
        font-size: 1.5em;
        font-weight: bold;
        color: #333;
    }
    
    #newsDescription {
        color: #555;
    }
    
    /* Стили для полного просмотра новости (newsDetail.ejs) */
    #newsText {
        font-size: 1.2em;
        line-height: 1.6;
        color: #333;
        max-width: 800px; /* Ограничиваем ширину текста до 800px */
        margin: 0 auto; /* Центрируем текст по горизонтали */
    }
    #newsDTitle {
        font-size: 1.5em;
        font-weight: bold;
        color: #333;
        text-align: center;
    }
    
    /* Стили для форм добавления и редактирования статьи */
    .form {
        margin-top: 20px;
        border: 5px solid #a2df99;
        padding: 20px;
        
    }
    
    .form label {
        display: block;
        margin-bottom: 5px;
    
    }
    
    .form input,
    .form textarea {
        width: calc(100% - 20px);
        padding: 8px;
        margin-bottom: 10px;
        box-sizing: border-box;
        border: 3px solid #e74c3c; 
    }
    
    .form button {
        background-color: #4caf50;
        color: #fff;
        padding: 10px;
        border: 3px solid #e74c3c; 
        cursor: pointer;
    }
    </style>
</head>
<body>
    <div id="articleContent">
        <div id="articleTitle"><%= data[0].titleArticle %></div>
        <p id="articleText">
            <%= data[0].textArticle %>
        </p>
    </div>
    <div class="form">
        <h2>Изменить статью</h2>
        <form id="editArticleForm" action="http://localhost:3000/admin/editArticle" method="post">
            <label for="titleArticle">Название статьи</label>
            <input type="text" name="titleArticle" id="titleArticle" required value="<%= data[0].titleArticle %>">
            <p>
                <label for="textArticle">Текст статьи</label>
                <textarea rows="10" cols="30" name="textArticle" id="textArticle"><%= data[0].textArticle %></textarea>
            </p>
            <p>
                <label for="descriptionArticle">Описание статьи</label>
                <input type="text" name="descriptionArticle" id="descriptionArticle" value="<%= data[0].descriptionArticle %>">
            </p>
            <button type="submit" id="sendArticle">Редактировать статью</button>
            <button type="button" id="deleteArticle">Удалить статью</button>
            <p><a href="http://localhost:3000/admin/">Вернуться к списку статей</a></p>
        </form>
    </div>
    <script>
        document.querySelector("#sendArticle").onclick = async function(event) {
            event.preventDefault();
            let article = {
                'idArticle': location.href.split("/").at(-1),
                'titleArticle': document.querySelector("#titleArticle").value,
                'textArticle': document.querySelector("#textArticle").value,
                'descriptionArticle': document.querySelector("#descriptionArticle").value,
            };

            try {
                const response = await fetch('http://localhost:3000/admin/editArticle', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json;charset=utf-8'
                    },
                    body: JSON.stringify(article)
                });

                if (response.ok) {
                    alert("Данные изменены");

                    // Загрузка обновленных данных и их отображение на странице
                    const updatedDataResponse = await fetch(`http://localhost:3000/admin/${article.idArticle}`);
                    const updatedData = await updatedDataResponse.text();

                    // Замена содержимого элемента с id "articleContent" на обновленные данные
                    document.getElementById('articleContent').innerHTML = updatedData;
                } else {
                    alert("Ошибка при изменении данных");
                }
            } 
            catch (error) {
                alert("Ошибка: " + error);
            }
        };
    </script>
    <script>
        document.querySelector("#deleteArticle").onclick = function(event) {
            event.preventDefault();
            if (confirm("Вы уверены, что хотите удалить эту статью?")) {
            let article = {
                'idArticle': location.href.split("/").at(-1),
            };
            let promise = fetch('http://localhost:3000/admin/deleteArticle', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json;charset=utf-8'
                },
                body: JSON.stringify(article)
            })
                .then(response => document.location = "http://localhost:3000/admin/")
                .catch((error) => {
                    console.log(error);
                });
            }
        }
    </script>
</body>
</html>